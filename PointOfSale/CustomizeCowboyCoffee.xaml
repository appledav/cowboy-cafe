<UserControl x:Class="PointOfSale.CustomizeCowboyCoffee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock FontSize="30" Text="Customize Cowboy Coffee"/>
        <StackPanel Orientation="Horizontal">
            <Label>Ice</Label>
            <CheckBox IsChecked="{Binding Path=Ice}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Room for cream</Label>
            <CheckBox IsChecked="{Binding Path=RoomForCream}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Decaf</Label>
            <CheckBox IsChecked="{Binding Path=Decaf}"/>
        </StackPanel>

    </StackPanel>
</UserControl>
